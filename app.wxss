/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
swiper image {
  width: 100%;
}

.introduction {
  width: 100%;
  padding: 20rpx 0 0 20rpx;
}

.introduction .name{
  font-size: 40rpx;
  display: block;
  line-height: 70rpx;
}

.introduction .info {
  font-size: 30rpx;
  display: block;
  line-height: 50rpx;
}

.classify {
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 20px;
}

.classify-item {
  width: 48%;
}

.classify-item.word {
  height: 300rpx;
  text-align: center;
  line-height: 300rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  background: #17a6e0;
}

.left {
  margin-left: 10rpx;
}

.right {
  margin-right: 10rpx;
}

.classify-item image{
  width: 100%;
  height: 300rpx;
}

.footer {
  height: 150rpx;
}

.footer text {
  font-size: 20rpx;
}
  
