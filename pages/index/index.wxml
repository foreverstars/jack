      <text>汉川市新河镇汉正工业园长风大道A2-13号</text>
    </text>
    <text class="info">
      <text class="label">联系人:</text> 
      <text>程冲</text>
    </text>
    <text class="info">
      <text class="label">手机号码:</text>
      <text>15802742482</text>
    </text>
  </view>

  <view class="classify">
    <view class="classify-item left">
      <image src="../image/8.jpg" class="slide-image"/>
    </view>
    <view class="classify-item right">
      <image src="../image/9.jpg" class="slide-image"/>
    </view>
    <view class="classify-item left word">
      产品介绍
    </view>
    <view class="classify-item right word">
      针车配件
    </view>
  </view>

  <view>
  
  </view>

  <view class="footer">
    <image src="../image/location.png"/>
